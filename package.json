{
  "name": "vite-react-app",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev:dev": "vite --mode dev",
    "dev:stg": "vite --mode stg --https",
    "dev:prd": "vite --mode prd --https",
    "build:dev": "tsc --noEmit && vite build --mode dev",
